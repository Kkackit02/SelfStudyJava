import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JOptionPane;
import javax.swing.JTextField;

public class MessageActionListener implements ActionListener {

	public nameLabel = new JLabel("이름");
	public JTextField studentNumField = new JTextField(15);
	@Override
	public void actionPerformed(ActionEvent e)
	{
		String ScreenText = "이름: " + nameField.getText() + "\n" +
				"학번: " + studentNumField.getText();
		JOptionPane.showMessageDialog(null, ScreenText, "제목", JOptionPane.WARNING_MESSAGE);
	}	

}
